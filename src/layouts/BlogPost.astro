---
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import type { CollectionEntry } from 'astro:content';
type Props = CollectionEntry<'blog'>;

const { data } = Astro.props;
---

<!doctype html>
<html lang="en" transition:animate="slide">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="relative flex h-full flex-col items-center">
		<Header />
		<main class="w-full overflow-hidden">
			<div class="blog container flex flex-col">
				<h1>{data.title}</h1>
				<div
					class="flex flex-col gap-y-3 font-semibold text-base-text dark:text-dark-base-text"
				>
					<p class="text-xl">{data.description}</p>
					<FormattedDate date={data.pubDate} blog = {true}/>
				</div>
				<hr class="border-t-2 border-dashed border-directory-prefix" />
				<slot />
				<hr class="border-t-2 border-dashed border-directory-prefix" />
		</main>
		<Footer />
	</body>
</html>
